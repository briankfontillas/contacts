extends layout 

block content
  form(action="/contacts/new-contact" method="post")
    fieldset 
      dl 
        dt 
          label(for="firstName") First Name: 
        dd
          input(type="text" name="firstName" id="firstName" value=firstName)
      dl 
        dt 
          label(for="lastName") Last Name: 
        dd
          input(type="text" name="lastName" id="lastName" value=lastName)
      dl 
        dt 
          label(for="phoneNumber") Phone Number: 
        dd
          input(type="text" name="phoneNumber" id="phoneNumber" placeholder="###-###-####" value=phoneNumber)
    fieldset 
      input(type="submit" value="Save")
      button(class="cancel" formaction="/contacts" formmethod="get") Cancel